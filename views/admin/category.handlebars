<h2>Lista de categorias</h2>

<hr>

<a href="/admin/category/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{#each Category}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data: {{createdAt}}</small><br>
            <a href="/admin/categories/edit/{{id}}"><button class="btn btn-success mt-4 pe-4">Editar Categoria</button>
            </a>
            <form action="/admin/category/delete" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
           
        </div>
    </div>
{{else}}
    <h4 class="mt-2">Nenhuma  categoria registrada!</h4>
{{/each}}